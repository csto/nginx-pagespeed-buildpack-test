daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
  gzip on;
  gzip_comp_level 6;
  gzip_min_length 512;
  gzip_types text/plain text/html text/css application/json application/javascript application/xml application/xml+rss text/javascript image/svg+xml;
  gzip_vary on;
  gzip_proxied any;

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	#Must read the body in 5 seconds.
	client_body_timeout <%= ENV['NGINX_CLIENT_BODY_TIMEOUT'] || 5 %>;

	upstream app_server {
		server unix:/tmp/nginx.socket fail_timeout=0;
 	}

  server {
    listen <%= ENV["PORT"] %>;
    server_name support.factioncommander.com;
    keepalive_timeout 5;

    location / {
      proxy_set_header Host $host;
      proxy_pass https://custom.intercom.help;
    }
  }

  server {
    listen <%= ENV["PORT"] %>;
    server_name www.factioncommander.com;
    return 302 $scheme://witharsenal.com$request_uri;
  }

	server {
		listen <%= ENV["PORT"] %>;
		server_name factioncommander.com;
		keepalive_timeout 5;
		client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || 1 %>M;

		location / {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://app_server;
		}

    location ^~ /blog {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      proxy_pass http://104.236.26.219:2368/blog;
      proxy_redirect off;
    }

		pagespeed on;

		# Needs to exist and be writable by nginx.  Use tmpfs for best performance.
		pagespeed FileCachePath /app/var/ngx_pagespeed_cache;

		# Ensure requests for pagespeed optimized resources go to the pagespeed handler
		# and no extraneous headers get set.
		location ~ "\.pagespeed\.([a-z]\.)?[a-z]{2}\.[^.]{10}\.[^.]+" {
		  add_header "" "";
		}
		location ~ "^/pagespeed_static/" { }
		location ~ "^/ngx_pagespeed_beacon$" { }

    # enable CoreFilters
    pagespeed RewriteLevel CoreFilters;

    # resize_rendered_image_dimensions
    pagespeed EnableFilters responsive_images,inline_images,resize_images,rewrite_style_attributes_with_url,rewrite_css,prioritize_critical_css,make_google_analytics_async,inline_google_font_css,local_storage_cache,inline_preview_images,resize_mobile_images,remove_comments,collapse_whitespace,elide_attributes,add_instrumentation,defer_javascript,in_place_optimize_for_browser;

    # pagespeed ImageRecompressionQuality 90;

    # pagespeed Statistics on;
    # pagespeed StatisticsLogging on;
    # pagespeed LogDir /var/log/pagespeed;
    # pagespeed AdminPath /pagespeed_admin;
    #
    # location ~ ^/pagespeed_admin {
    #   allow all;
    # }
	}
}
